{
  "name": "wealthwatcher",
  "version": "1.0.0",
  "description": "A Finance Tracker web application built with MERN stack.",
  "main": "index.js",
  "scripts": {
    "start:backend": "cd backend && nodemon app.js",
    "start:frontend": "cd frontend && npm run dev -- --host",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test": "npm-run-all --parallel test:backend test:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm-run-all build:backend build:frontend"
  },
  "keywords": [],
